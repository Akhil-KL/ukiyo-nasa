# Backend Environment Configuration
# Copy this file to .env and configure according to your environment

# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=.csv,.json,.txt
UPLOAD_DESTINATION=./uploads

# Dataset Configuration
DATASETS_PATH=../data/raw
PROCESSED_DATA_PATH=../data/processed
MODELS_PATH=../data/models
SCALERS_PATH=../data/scalers
MAX_DATASET_SIZE=50000

# Real NASA Dataset Files
K2_DATASET=K2 Planets and Candidate.csv
KEPLER_DATASET=Kepler Objects of Interest(KOI).csv
TESS_DATASET=TESS Objects of Interest(TOI).csv

# ML Model Configuration
ML_MODEL_PATH=./models
ML_CONFIDENCE_THRESHOLD=0.7
ML_BATCH_SIZE=32

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Configuration
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS=true

# Database Configuration (if using a database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=exoplanet_db
# DB_USER=admin
# DB_PASSWORD=password

# API Keys (if integrating with external services)
# NASA_API_KEY=your_nasa_api_key
# SIMBAD_API_KEY=your_simbad_api_key

# Feature Flags
ENABLE_BATCH_PROCESSING=true
ENABLE_MODEL_CACHING=true
ENABLE_REQUEST_LOGGING=true